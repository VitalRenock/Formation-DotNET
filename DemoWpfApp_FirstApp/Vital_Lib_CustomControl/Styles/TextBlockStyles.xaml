    </Style>
    
    <!--#endregion-->

    <!--#region Colors Definitions -->
    
    <Style TargetType="TextBlock" x:Key="TxtBlk_Alert" BasedOn="{StaticResource TxtBlk_Parent}">
        <Setter Property="Background" Value="#F94144" />
        <Setter Property="Foreground" Value="GhostWhite" />
    </Style>

    <Style TargetType="TextBlock" x:Key="TxtBlk_Desc" BasedOn="{StaticResource TxtBlk_Parent}">
